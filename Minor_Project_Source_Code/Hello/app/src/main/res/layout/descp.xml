<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="22dp"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="45dp">

        <ImageView
            android:id="@+id/l_img"
            android:layout_width="163dp"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:scaleType="fitCenter"
            android:src="@drawable/booka" />

        <TextView
            android:id="@+id/l_title"
            android:layout_width="118dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/l_img"
            android:text="Morning Star"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/l_author"
            android:layout_width="118dp"
            android:layout_height="30dp"

            android:layout_marginLeft="17dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/l_img"
            android:text="Mr. Brown"
            android:textSize="16sp" />

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_author"

            android:layout_marginLeft="175dp"
            android:layout_marginTop="15dp"
            android:rating="4" />

        <TextView
            android:id="@+id/l_desc"
            android:layout_width="389dp"
            android:layout_height="248dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="308dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="Morning Star is a 2016 science fiction novel by American author Pierce Brown, the third in his Red Rising trilogy. Morning Star picks up as the lowborn Darrow escapes capture and resumes his campaign against the tyrannical Sovereign of the Society." />

        <Button
            android:id="@+id/but11"
            android:layout_width="217dp"
            android:layout_height="93dp"
            android:layout_below="@+id/l_desc"

            android:layout_marginStart="110dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="62dp"
            android:background="@drawable/button"
            android:text="Feedback"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#858727B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.752"
            app:layout_constraintWidth_percent=".8" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/l_title"
            app:srcCompat="@android:drawable/stat_sys_download" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>